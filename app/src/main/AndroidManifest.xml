<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="ru.didim99.tstu">

  <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

  <application
    android:name=".TSTU"
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:supportsRtl="true"
    android:theme="@style/AppTheme"
    tools:ignore="GoogleAppIndexingWarning">
    <activity android:name=".ui.StartActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
      android:name=".ui.TranslatorActivity"
      android:label="@string/startTranslator"/>
    <activity
      android:name=".ui.NumericActivity"
      android:label="@string/startNumeric"/>
    <activity
      android:name=".ui.MathStatActivity"
      android:icon="@mipmap/ic_launcher_stat"
      android:label="@string/startMathStat"
      android:launchMode="singleTop">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
      android:name=".ui.dirpicker.DirPickerActivity"
      android:label="@string/actLabel_dirPicker"
      android:launchMode="singleTop"
      android:theme="@style/AppThemeDialog"/>
  </application>

</manifest>