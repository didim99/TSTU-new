<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!-- Custom view styling -->
  <declare-styleable name="RangeBar">
    <attr name="title" format="string"/>
    <attr name="scaled" format="boolean"/>
  </declare-styleable>
  <declare-styleable name="ValueBar">
    <attr name="colorBackground" format="color"/>
    <attr name="colorForeground" format="color"/>
    <attr name="iconID" format="integer"/>
    <attr name="units" format="string"/>
  </declare-styleable>
  <declare-styleable name="NumberedTextView">
    <attr name="lineNumColor" format="color"/>
    <attr name="contentColor" format="color"/>
    <attr name="textSize" format="dimension"/>
  </declare-styleable>
  <declare-styleable name="GameFieldView">
    <attr name="gridColor" format="color"/>
  </declare-styleable>
  <declare-styleable name="NetView">
    <attr name="defaultGridColor" format="color"/>
    <attr name="activeGridColor" format="color"/>
    <attr name="dotColor" format="color"/>
    <attr name="inputColor" format="color"/>
    <attr name="outputColor" format="color"/>
    <attr name="biasColor" format="color"/>
    <attr name="textColor" format="color"/>
  </declare-styleable>
  <!-- Theme-dependent colors -->
  <attr name="colorActive" format="color"/>
  <attr name="colorBgActive" format="color"/>
  <attr name="colorTextNormal" format="color"/>
  <attr name="clr_valueBarBg" format="color"/>
  <attr name="clr_valueBarFg" format="color"/>
  <attr name="clr_blue" format="color"/>
  <attr name="clr_green" format="color"/>
  <attr name="clr_yellow" format="color"/>
  <attr name="clr_orange" format="color"/>
  <attr name="clr_red" format="color"/>
  <attr name="clr_blueTransparent" format="color"/>
  <attr name="clr_greenTransparent" format="color"/>
  <attr name="clr_yellowTransparent" format="color"/>
</resources>