    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="6">

    <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="@dimen/actStart_btnPadding"
      android:text="@string/mp_sampleBtn"/>

    <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="@dimen/actStart_btnPadding"
      android:text="@string/mp_sampleBtn"/>

    <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="@dimen/actStart_btnPadding"
      android:text="@string/mp_sampleBtn"/>

    <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="@dimen/actStart_btnPadding"
      android:text="@string/mp_sampleBtn"/>

    <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="@dimen/actStart_btnPadding"
      android:text="@string/mp_sampleBtn"/>

    <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="@dimen/actStart_btnPadding"
      android:text="@string/mp_sampleBtn"/>
  </LinearLayout>

</LinearLayout>