<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="horizontal"
  android:padding="@dimen/layoutPadding">

  <LinearLayout
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    android:layout_marginRight="@dimen/layoutPadding"
    android:layout_marginEnd="@dimen/layoutPadding">

    <Button
      android:id="@+id/btnAnimate"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/graphics_animate"/>

    <Button
      android:id="@+id/btnClear"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/graphics_clear"/>

    <TextView
      android:id="@+id/tvAngle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/layoutPadding"
      android:textSize="@dimen/textSize_main"
      android:textAlignment="center"/>

    <SeekBar
      android:id="@+id/sbAngle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>

    <CheckBox
      android:id="@+id/cbUseAA"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/layoutPadding"
      android:text="@string/graphics_useAA"/>

  </LinearLayout>

  <ru.didim99.tstu.ui.graphics.view.DrawerView
    android:id="@+id/view"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"/>

</LinearLayout>