<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:background="?android:attr/selectableItemBackground"
  android:focusable="true"
  android:clickable="true">

  <ImageView
    android:id="@+id/ivTopDivider"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dirPicker_divHeight"
    android:layout_marginLeft="@dimen/dirPicker_divHMargin"
    android:layout_marginRight="@dimen/dirPicker_divHMargin"
    android:visibility="invisible"
    app:srcCompat="@color/dirPicker_divider"
    tools:ignore="ContentDescription"/>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/tvName"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="5"
      android:padding="@dimen/dirPicker_itemTextPadding"
      android:textSize="@dimen/dirPicker_itemTextSize"
      android:text="@string/oop_shop_name"/>

    <TextView
      android:id="@+id/tvVendor"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="3"
      android:padding="@dimen/dirPicker_itemTextPadding"
      android:textSize="@dimen/dirPicker_itemTextSize"
      android:text="@string/oop_shop_vendor"/>

    <TextView
      android:id="@+id/tvPrice"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="2"
      android:padding="@dimen/dirPicker_itemTextPadding"
      android:textSize="@dimen/dirPicker_itemTextSize"
      android:text="@string/oop_shop_price"/>

    <TextView
      android:id="@+id/tvCount"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="2"
      android:padding="@dimen/dirPicker_itemTextPadding"
      android:textSize="@dimen/dirPicker_itemTextSize"
      android:text="@string/oop_shop_count"
      android:visibility="gone"/>

    <TextView
      android:id="@+id/tvSum"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="2"
      android:padding="@dimen/dirPicker_itemTextPadding"
      android:textSize="@dimen/dirPicker_itemTextSize"
      android:text="@string/oop_shop_sum"
      android:visibility="gone"/>
  </LinearLayout>

  <ImageView
    android:layout_width="match_parent"
    android:layout_height="@dimen/dirPicker_divHeight"
    android:layout_marginLeft="@dimen/dirPicker_divHMargin"
    android:layout_marginRight="@dimen/dirPicker_divHMargin"
    app:srcCompat="@color/dirPicker_divider"
    tools:ignore="ContentDescription"/>

</LinearLayout>