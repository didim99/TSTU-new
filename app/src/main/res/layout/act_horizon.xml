<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="horizontal"
  android:padding="@dimen/layoutPadding">

  <LinearLayout
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="6"
    android:orientation="vertical"
    android:layout_marginRight="@dimen/layoutPadding"
    android:layout_marginEnd="@dimen/layoutPadding">

    <Button
      android:id="@+id/btnAnimate"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/graphics_animate"/>

    <Button
      android:id="@+id/btnClear"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/graphics_clear"/>

    <TextView
      android:id="@+id/tvAngleProjection"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/layoutPadding"
      android:textSize="@dimen/textSize_main"
      android:textAlignment="center"/>

    <SeekBar
      android:id="@+id/sbAngleProjection"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>

    <TextView
      android:id="@+id/tvAnglePitch"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/layoutPadding"
      android:textSize="@dimen/textSize_main"
      android:textAlignment="center"/>

    <SeekBar
      android:id="@+id/sbAnglePitch"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:text="@string/graphics_parameters"
      android:textSize="@dimen/textSize_main"
      android:textAlignment="center"/>

    <TextView
      android:id="@+id/tvAlpha"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/layoutPadding"
      android:textSize="@dimen/textSize_main"
      android:textAlignment="center"/>

    <SeekBar
      android:id="@+id/sbAlpha"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>

    <TextView
      android:id="@+id/tvBeta"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/layoutPadding"
      android:textSize="@dimen/textSize_main"
      android:textAlignment="center"/>

    <SeekBar
      android:id="@+id/sbBeta"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>

    <TextView
      android:id="@+id/tvGamma"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/layoutPadding"
      android:textSize="@dimen/textSize_main"
      android:textAlignment="center"/>

    <SeekBar
      android:id="@+id/sbGamma"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>
  </LinearLayout>

  <ru.didim99.tstu.ui.graphics.DrawerView
    android:id="@+id/view"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="14"/>

</LinearLayout>