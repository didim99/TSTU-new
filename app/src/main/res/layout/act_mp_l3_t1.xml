<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:padding="@dimen/layoutPadding">

  <Button
    android:id="@+id/mp_btnDownload"
    android:layout_width="150dp"
    android:layout_height="100dp"
    android:layout_centerInParent="true"
    android:padding="@dimen/actStart_btnPadding"
    android:text="@string/mp_download"
    android:background="#3333cc"/>

  <Button
    android:id="@+id/mp_btnView"
    android:layout_width="150dp"
    android:layout_height="100dp"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:padding="@dimen/actStart_btnPadding"
    android:text="@string/mp_view"
    android:background="#ccff99"/>

  <Button
    android:id="@+id/mp_btnDelete"
    android:layout_width="150dp"
    android:layout_height="100dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentBottom="true"
    android:padding="@dimen/actStart_btnPadding"
    android:text="@string/mp_delete"
    android:background="#ccecff"/>

</RelativeLayout>