<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:background="?android:attr/selectableItemBackground"
  android:focusable="true"
  android:clickable="true">

  <ImageView
    android:id="@+id/ivTopDivider"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dirPicker_divHeight"
    android:layout_marginLeft="@dimen/dirPicker_divHMargin"
    android:layout_marginRight="@dimen/dirPicker_divHMargin"
    android:visibility="invisible"
    app:srcCompat="@color/dirPicker_divider"
    tools:ignore="ContentDescription"/>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/tvName"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="35"
      android:padding="@dimen/dirPicker_itemTextPadding"
      android:textSize="@dimen/dirPicker_itemTextSize"
      android:text="@string/oop_fullName"/>

    <TextView
      android:id="@+id/tvAddress"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="60"
      android:padding="@dimen/dirPicker_itemTextPadding"
      android:textSize="@dimen/dirPicker_itemTextSize"
      android:text="@string/oop_address"/>

    <TextView
      android:id="@+id/tvLang"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="15"
      android:padding="@dimen/dirPicker_itemTextPadding"
      android:textSize="@dimen/dirPicker_itemTextSize"
      android:text="@string/oop_lang"/>

    <TextView
      android:id="@+id/tvMath"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="15"
      android:padding="@dimen/dirPicker_itemTextPadding"
      android:textSize="@dimen/dirPicker_itemTextSize"
      android:text="@string/oop_math"/>

    <TextView
      android:id="@+id/tvPhysics"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="15"
      android:padding="@dimen/dirPicker_itemTextPadding"
      android:textSize="@dimen/dirPicker_itemTextSize"
      android:text="@string/oop_physics"/>
  </LinearLayout>

  <ImageView
    android:layout_width="match_parent"
    android:layout_height="@dimen/dirPicker_divHeight"
    android:layout_marginLeft="@dimen/dirPicker_divHMargin"
    android:layout_marginRight="@dimen/dirPicker_divHMargin"
    app:srcCompat="@color/dirPicker_divider"
    tools:ignore="ContentDescription"/>

</LinearLayout>